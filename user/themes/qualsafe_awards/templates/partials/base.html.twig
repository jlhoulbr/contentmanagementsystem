{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
{% set headerPage = page.find('/header-panel') %}
{% set sidePage = page.find('/side-panel') %}
{% set footerPage = page.find('/footer-panel') %}
<!DOCTYPE html>
<html lang="{{ grav.language.getLanguage ?: 'en' }}">
<head>
    {% block head %}
        <meta charset="utf-8"/>
        <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
        {% include 'partials/metadata.html.twig' %}
        <meta name="viewport"
              content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png') }}"/>
        <link rel="canonical" href="{{ page.url(true, true) }}"/>

        {% block stylesheets %}
            {% do assets.addCss('theme://css/pure-0.5.0/grids-min.css', 103) %}
            {% do assets.addCss('theme://css-compiled/nucleus.css', 102) %}
            {% do assets.addCss('theme://css-compiled/template.css', 101) %}
            {% do assets.addCss('theme://css/custom.css', 100) %}
            {% do assets.addCss('theme://css/font-awesome.min.css', 100) %}
            {% do assets.addCss('theme://css/slidebars.min.css') %}
            {% do assets.addCss('theme://slick/slick.css') %}

            {% if browser.getBrowser == 'msie' and browser.getVersion == 10 %}
                {% do assets.addCss('theme://css/nucleus-ie10.css') %}
            {% endif %}
            {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
                {% do assets.addCss('theme://css/nucleus-ie9.css') %}
                {% do assets.addJs('theme://js/html5shiv-printshiv.min.js') %}
            {% endif %}
        {% endblock %}
        {{ assets.css() }}

        {% block javascripts %}
            {% do assets.addJs('jquery', 101) %}
            {% do assets.addJs('theme://js/modernizr.custom.71422.js', 100) %}
            {% do assets.addJs('theme://js/qualsafe_awards.js') %}
            {% do assets.addJs('theme://js/slidebars.min.js') %}
            {% do assets.addJs('theme://slick/slick.min.js') %}
        {% endblock %}
        {{ assets.js() }}

    {% endblock head %}
    <script type='text/javascript'>
        $(document).ready(function () {
            $('.sliding-banner').slick({autoplay: true, arrows: false});
        });

        function formHandler(formID) {
            var response = grecaptcha.getResponse();
            if (response.length == 0) {
                return false;
            } else {
                var formValues = $('form#' + formID + ' :input');
                var values = {};
                formValues.each(function () {

                    if ($(this).attr('type') == 'radio') {
                        if ($(this).is(':checked')) {
                            values[this.name] = $(this).val();
                        }
                    } else {
                        if ($(this).attr('type') == 'checkbox') {
                            if ($(this).is(':checked')) {
                                values[this.name] = $(this).val();
                            }
                        } else {
                            values[this.name] = $(this).val();
                        }
                    }
                });
                $.ajax({
                    type: 'POST',
                    data: {values: values},
                    url: '/grav-admin/formcreator/customFormSubmission.php', // Your form script
                    success: function (msg) {
                        $('form#' + formID).html(msg);
                    }
                });
                return false;
            }
        }
    </script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    {% if  page.url != base_url %}
        <style>
            .onlyHomePage {
                display: none;
            }
        </style>
    {% endif %}
</head>
<body id="top" class="{{ page.header.body_classes }}">

<div id="sb-site">
    {% block header %}
        <header id="header">
            <div id="logo">
                <a href="{{ base_url == '' ? '/' : base_url }}"><img class="headerImage"
                                                                     src="{{ url('theme://images/header.jpg') }}"></a>
            </div>
            <div id="navbar">
                {% block header_extra %}{% endblock %}
                {% if config.plugins.langswitcher.enabled %}
                    {% include 'partials/langswitcher.html.twig' %}
                {% endif %}
                {% block header_navigation %}
                    {% include 'partials/navigation.html.twig' %}
                {% endblock %}
                <span class="panel-activation sb-toggle-left navbar-left menu-btn fa fa-bars"></span>
            </div>
            {% if  page.url == base_url %}
                <div id="header-panel">
                    {{ headerPage.content }}
                </div>
            {% endif %}
        </header>
    {% endblock %}

    {% block showcase %}{% endblock %}
    {% if config.plugins.breadcrumbs.enabled %}
        {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}
    {% block body %}
        <section id="body" class="{{ class }}">
            {% block content %}{% endblock %}
        </section>
        <section id="side-panel">{{ sidePage.content }}</section>
    {% endblock %}

    {% block footer %}
        <footer id="footer">
            <img src="/grav-admin/user/themes/qualsafe_awards/images/footer-background-top.jpg">
            <section id="footer-panel">{{ footerPage.content }}</section>
        </footer>
    {% endblock %}
</div>
<div class="sb-slidebar sb-left sb-width-thin">
    <div id="panel">
        {% include 'partials/navigation.html.twig' %}
    </div>
</div>
{% block bottom %}
    {{ assets.js('bottom') }}
    <script>
        $(function () {
            $(document).ready(function () {
                $.slidebars({
                    hideControlClasses: true,
                    scrollLock: true
                });

            });
        });

        function occurrences(string, subString, allowOverlapping) {

            string += "";
            subString += "";
            if (subString.length <= 0) return (string.length + 1);

            var n = 0,
                pos = 0,
                step = allowOverlapping ? 1 : subString.length;

            while (true) {
                pos = string.indexOf(subString, pos);
                if (pos >= 0) {
                    ++n;
                    pos += step;
                } else break;
            }
            return n;
        }

        function replaceIndex(section) {
            $('#' + section + '-panel img').each(function () {
                var imageLink = $(this).attr('src');
                if (imageLink.indexOf('grav-admin') == -1) {
                    $(this).attr('src', '/grav-admin/' + imageLink);
                }
            });

            var bodyHTML = $('#' + section + '-panel').html();
            var imageOccurence = occurrences(bodyHTML, '![](');
            for (var i = 0; i < imageOccurence; i++) {
                $('#' + section + '-panel').html(function (index, html) {
                    var String = html.substring(html.indexOf(">![](") + 5, html.indexOf(")<"));
                    return html.replace('>![](' + String + ')<', '><img src="/grav-admin/' + section + '-panel/' + String + '"><');
                });
            }

        }

        function setURL() {
            {% if  page.url == base_url %}
            replaceIndex('header');
            {% endif %}
            replaceIndex('side');
            replaceIndex('footer');
        }

        setURL();
    </script>
{% endblock %}

</body>
</html>
